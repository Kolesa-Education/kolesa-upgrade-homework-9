{% extends "base.twig" %}

{% block body %}
    <h1>Обновить категорию</h1>

    {% if errors is not empty %}
        <div style="color: red">При сохранении произошла ошибка</div>
        <ul>
            {% for error in errors %}
                <li>
                    {{ error }}
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    <form action="{{ url_for('categories.update', { 'id': category.getId() }) }}" method="post">
        <input type="hidden" name="_METHOD" value="PATCH">
        {% include "categories/form.twig" %}
        <input type="submit" value="Обновить">
    </form>
{% endblock %}