{% extends "base.twig" %}

{% block body %}
    {% if advert.getTitle == "" %}
        <h1>Объявление не найдено</h1>
    {% else %}
        <h1>{{ advert.getTitle() }}</h1>
        <a href="/adverts/{{ id }}/edit"> <button>Редактировать объявление</button> </a>
        <p> Описание: {{ advert.getDescription() }}</p>
        <p> Цена: {{ advert.getPrice() }}</p>
        <a href="/adverts"> <button>Назад</button> </a>
    {% endif %}
{% endblock %}