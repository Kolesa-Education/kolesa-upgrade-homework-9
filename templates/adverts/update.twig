{% extends "base.twig" %}

{% block body %}
    <h1>Обнавить объявление {{ advert.getId() ?? data.id}}</h1>

    {% if errors is not empty %}
        <div style="color: red">При сохранении произошла ошибка</div>
        <ul>
            {% for error in errors %}
                <li>
                    {{ error }}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    <form action="/adverts/update/{{ advert.getId() }}" method="POST">
        <input type="hidden" name="advert[id]" value="{{advert.getId() ?? data.id}}">
        <div>
            <label>
                Заголовок *
                <input type="text" name="advert[title]" value="{{advert.getTitle() ?? data.title}}">
                {% if errors.title %}
                    <div style="color: red">{{ errors.title }}</div>
                {% endif %}
            </label>
        </div>
        <br>
        <div>
            <label>
                Описание *
                <input type="text" name="advert[description]" value="{{advert.getDescription() ?? data.description}}">
                {% if errors.description %}
                    <div style="color: red">{{ errors.description }}</div>
                {% endif %}
            </label>
        </div>
        <br>
        <div>
            <label>
                Цена *
                <input type="number" name="advert[price]" value="{{advert.getPrice ?? data.price}}">
                {% if errors.price %}
                    <div style="color: red">{{ errors.price }}</div>
                {% endif %}
            </label>
        </div>
        <br>
        <button> <a href="http://localhost:8000/adverts/{{ advert.getId() ?? data.id }}">Отенить</a> </button>
        <button type="submit" value="Сохранить">Сохранить </button>
    </form>
{% endblock %}
