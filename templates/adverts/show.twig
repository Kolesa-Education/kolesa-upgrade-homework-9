{% extends "base.twig" %}

{% block body %}
    <h1>Объявление</h1>
    <h3>{{ advert.getTitle }}</h3>
    <p>
        Категория: {{ advert.getCategory }}
    </p>
    <p>
        Описание: {{ advert.getDescription }}
    </p>
    <p>
        Цена: {{ advert.getPrice }} тенге
    </p>
    <form action="{{ advert.getId }}/edit">
        <input type="submit" value="Edit" />
    </form>
{% endblock %}