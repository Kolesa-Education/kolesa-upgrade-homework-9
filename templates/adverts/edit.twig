{% extends "base.twig" %}

{% block body %}
    <h1>Изменить объявление</h1>

    {% if errors is not empty %}
        <div style="color: red">При сохранении произошла ошибка</div>
        <ul>
            {% for error in errors %}
                <li>
                    {{ error }}
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    <form action="/adverts/{{ advert.getId() }}/edit" method="post">
        <input type="hidden" name="advert[id]" value="{{ advert.getId() }}">
        <div>
            <label>
                Заголовок *
                <input type="text" name="advert[title]" value="{{ advert.getTitle() ?? '' }}">
            </label>
        </div>
        <br>
        <div>
            <label>
                Описание *
                <input type="text" name="advert[description]" value="{{ advert.getDescription() ?? '' }}">
            </label>
        </div>
        <br>
        <div>
            <label>
                Цена *
                <input type="number" name="advert[price]" value="{{ advert.getPrice() ?? 0 }}">
            </label>
        </div>
        <br>
        <input type="submit" value="Update">
    </form>
{% endblock %}
